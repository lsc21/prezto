[user]
  name = Louis Clotman
	email = louis@clotman.name
[core]
	editor = vim
	excludesfile = ~/.gitignore
[color]
  diff = auto
  status = auto
  branch = auto
[color "diff"]
  meta = yellow
  frag = cyan
  old = red
  new = green
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[alias]
  st = status
  ci = commit -a
  cl = clean -dfx
  co = checkout
  hist = log --branches --remotes --graph --pretty='[%C(cyan)%h%Creset]%C(bold cyan)%d%Creset %s'
  histall = log --all --graph --pretty='[%C(cyan)%h%Creset]%C(bold cyan)%d%Creset %s'
  tt = timetrack
  taghist = log --no-walk --tags --pretty='%h %d %s' --decorate=full
[push]
  default = simple
[grep]
  linenumber = true
  fullName = true
[web]
  browser = elinks
[merge]
  tool = vimdiff
